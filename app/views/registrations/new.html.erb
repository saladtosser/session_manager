<div class="container mt-5">
  <h2 class="text-center">Session Registration</h2>
  <%= form_with model: @registration, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :full_name, class: "form-label" %>
      <%= form.text_field :full_name, class: "form-control", placeholder: "Enter your full name", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="mb-3">
      <%= form.label :phone_number, class: "form-label" %>
      <%= form.telephone_field :phone_number, class: "form-control", placeholder: "Enter your phone number" %>
    </div>

    <div class="mb-3">
      <%= form.label :college, class: "form-label" %>
      <%= form.text_field :college, class: "form-control", placeholder: "Enter your college name" %>
    </div>

    <div class="text-center">
      <%= form.submit "Register", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

