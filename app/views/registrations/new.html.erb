<div class="container mt-5 registration-page">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <!-- Logo Section -->
      <div class="text-center mb-4">
        <%= image_tag "logo.png", alt: "Logo", style: "width: 200px; height: auto;" %>
      </div>

      <!-- Form Card -->
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h3>Register for a Session</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @registration, local: true, class: "needs-validation") do |f| %>
            
            <!-- Full Name Field -->
            <div class="form-group mb-3 row">
              <div class="col-12">
                <%= f.label :full_name, "Full Name", class: "form-label" %>
                <%= f.text_field :full_name, class: "form-control", placeholder: "Enter your full name", required: true %>
                <div class="text-danger"><%= @registration.errors[:full_name].first if @registration.errors[:full_name].any? %></div>
              </div>
            </div>

            <!-- Email Field -->
            <div class="form-group mb-3 row">
              <div class="col-12">
                <%= f.label :email, "Email", class: "form-label" %>
                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
                <div class="text-danger"><%= @registration.errors[:email].first if @registration.errors[:email].any? %></div>
              </div>
            </div>

            <!-- Phone Number Field -->
            <div class="form-group mb-3 row">
              <div class="col-12">
                <%= f.label :phone_number, "Phone Number", class: "form-label" %>
                <%= f.telephone_field :phone_number, class: "form-control", placeholder: "Enter your phone number", required: true %>
                <div class="text-danger"><%= @registration.errors[:phone_number].first if @registration.errors[:phone_number].any? %></div>
              </div>
            </div>

            <!-- College Field -->
            <div class="form-group mb-3 row">
              <div class="col-12">
                <%= f.label :college, "College", class: "form-label" %>
                <%= f.text_field :college, class: "form-control", placeholder: "Enter your college", required: true %>
                <div class="text-danger"><%= @registration.errors[:college].first if @registration.errors[:college].any? %></div>
              </div>
            </div>

            <!-- Event Session Dropdown -->
            <div class="form-group mb-3 row">
              <div class="col-12">
                <%= f.label :event_session_id, "Select a Session", class: "form-label" %>
                <div class="custom-dropdown">
                  <%= f.collection_select :event_session_id, @event_sessions, :id, :name, { prompt: "Choose a session" }, { class: "form-control custom-select animated-dropdown", required: true } %>
                </div>
                <div class="text-danger"><%= @registration.errors[:event_session_id].first if @registration.errors[:event_session_id].any? %></div>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <%= f.submit "Register", class: "btn btn-success btn-lg w-100" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
