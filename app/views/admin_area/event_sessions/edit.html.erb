<h1>Edit Event Session</h1>

<%= form_with(model: @event_session, url: admin_area_event_session_path(@event_session), method: :patch, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', value: @event_session.name %>
  </div>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, class: 'form-control', value: @event_session.location %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: 'form-control', value: @event_session.date %>
  </div>
  <%= f.submit 'Update Session', class: 'btn btn-warning' %>
<% end %>

<%= link_to 'Back', admin_area_event_sessions_path, class: 'btn btn-secondary mt-3' %>
